declare @total int;
declare @msg varchar 100;

set @total = (select count(*) from aluno);

if @total > 5
	begin
		set @msg = 'Mais que 5 alunos'
		print(@msg)
	end
else
	begin
		set @msg = 'Menos que 5 alunos'
		print(@msg)
	end;





